@model ModelEF.Model.UserAccount
@{
    ViewBag.Title = "Cập nhật UserAccount";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<h2>Cập nhật UserAccount</h2>
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "NguoiDung")
</div>
@using (Html.BeginForm("Edit", "NguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="text-success">
            @ViewBag.EditTypeError
        </div>
        <div class="form-group col-lg-5">
            <label>Status</label>
            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập trạng thái Blocked để xóa..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Status)</div>
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>